# The user under which the systemd unit should run
SYSTEMD_UNIT_USER=tsbot

# The group under which the systemd unit should run
SYSTEMD_UNIT_USER=users

# The root directory, where the project is installed
PROJECT_ROOT_DIR=/usr/local/bin/teamspeak3-python-bot

# The relative path to the virtual env Python binary
PYTHON_VENV_BIN=venv/bin/python

# The log level for the bot
# See https://docs.python.org/3/library/logging.html#levels for possible values.
LOG_LEVEL=INFO
